<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <ui:VisualElement class="frame-group" style="flex-grow: 1;">
        <!-- Agent Header -->
        <ui:VisualElement style="flex-direction: row; align-items: center;">
            <ui:VisualElement name="agentIcon" class="agent-icon" />
            <ui:VisualElement style="flex-grow: 1;">
                <ui:Label name="agentName" text="Claude Code" class="section-title" />
                <ui:VisualElement name="linksContainer" style="flex-direction: row; align-items: center;">
                    <ui:Label name="downloadLink" text="Download" class="section-desc link-label" />
                    <ui:Label name="tutorialSeparator" text="•" class="section-desc link-separator" />
                    <ui:Label name="tutorialLink" text="YouTube Tutorial" class="section-desc link-label" />
                </ui:VisualElement>
            </ui:VisualElement>
            <ui:Button name="btnRemoveConfig" text="✕" class="btn-remove-circle" style="align-self: flex-start;" tooltip="Remove MCP server from the AI agent configuration" />
        </ui:VisualElement>

        <!-- Under header container -->
        <ui:VisualElement name="containerUnderHeader" />

        <!-- Transport mode container: HTTP -->
        <ui:VisualElement name="containerHttp" />

        <!-- Transport mode container: STDIO -->
        <ui:VisualElement name="containerStdio" />

    </ui:VisualElement>
</ui:UXML>
